# Kineo Analytics Frontend Environment Variables
# Copy this file to .env.local and configure for your environment

# Application
NEXT_PUBLIC_APP_NAME=Kineo Analytics
NEXT_PUBLIC_APP_VERSION=1.0.0
NEXT_PUBLIC_ENVIRONMENT=development
NODE_ENV=development

# API Configuration  
NEXT_PUBLIC_API_URL=http://localhost:8000/api/v1
NEXT_PUBLIC_AUTH_URL=http://localhost:8000/auth

# Authentication
JWT_SECRET=your-jwt-secret-here
NEXT_PUBLIC_JWT_EXPIRY=24h

# Customer/Tenant Configuration
NEXT_PUBLIC_DEFAULT_CUSTOMER_ID=customer_001
NEXT_PUBLIC_ENABLE_CUSTOMER_SWITCHING=true

# Database (if needed for API routes)
DATABASE_URL=postgresql://localhost:5432/kineo_analytics

# External Services
NEXT_PUBLIC_DATABRICKS_WORKSPACE_URL=https://your-databricks-workspace.azuredatabricks.net

# Feature Flags
NEXT_PUBLIC_ENABLE_ANALYTICS=true
NEXT_PUBLIC_ENABLE_REPORTS=true
NEXT_PUBLIC_ENABLE_SETTINGS=true

# Logging
NEXT_PUBLIC_LOG_LEVEL=info
NEXT_PUBLIC_ENABLE_CONSOLE_LOGGING=true

# Performance
NEXT_PUBLIC_ENABLE_BUNDLE_ANALYZER=false
NEXT_PUBLIC_ENABLE_PERFORMANCE_MONITORING=false